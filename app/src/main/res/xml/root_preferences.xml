<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="History">

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/SETTINGS_HISTORY"
            android:title="Save history of chats by default"
            app:summaryOff="Save history checkbox will be unchecked by default"
            app:summaryOn="Save history checkbox will be checked by default" />

        <ListPreference
            app:defaultValue="Whatsapp"
            app:entries="@array/whatsapp_application"
            app:entryValues="@array/whatsapp_application"
            app:key="@string/SETTINGS_DEFAULT_WA"
            app:title="Default whatsapp application"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header"/>

</PreferenceScreen>